<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/achievementImageView"
        android:src="@drawable/take_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/achievementTitleTextView"
        android:text="@string/achievements"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/bevietnampro_semibold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/achievementDescriptionTextView"
        android:textAlignment="center"
        android:text="@string/topic_description_english"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/bevietnampro_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        android:text="@string/understand"
        android:id="@+id/understandButton"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/bevietnampro_bold"
        android:layout_height="wrap_content"/>
</LinearLayout>