<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    tools:context=".AddTopicActivity"
    >
    <FrameLayout
        android:paddingHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingHorizontal="15dp"
            android:paddingVertical="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/returnBtn"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="20dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/bevietnampro_extrabold"
                android:text="@string/add_topic"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/popupBtn"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_settings_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_marginStart="10dp"
                android:id="@+id/confirmBtn"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_check_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginHorizontal="15dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:text="@string/topic_title_english"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingHorizontal="0dp"
            android:inputType="text"
            android:id="@+id/englishTopicTitleEdt"
            android:textColor="@color/white"
            android:hint="@string/topic_title_english"
            android:textColorHint="@color/tertiary_color"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/tertiary_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginHorizontal="15dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:text="@string/topic_title_vietnamese"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingHorizontal="0dp"
            android:inputType="text"
            android:id="@+id/vietnameseTopicTitleEdt"
            android:textColor="@color/white"
            android:hint="@string/topic_title_vietnamese"
            android:textColorHint="@color/tertiary_color"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/tertiary_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="15dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:text="@string/topic_description_english"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingHorizontal="0dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|start"
            android:id="@+id/topicDescriptionEnglishEdt"
            android:textColor="@color/white"
            android:hint="@string/topic_description"
            android:textColorHint="@color/tertiary_color"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/tertiary_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginHorizontal="15dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:text="@string/topic_description_vietnamese"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingHorizontal="0dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|start"
            android:id="@+id/topicDescriptionVietnameseEdt"
            android:textColor="@color/white"
            android:hint="@string/topic_description_vietnamese"
            android:textColorHint="@color/tertiary_color"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/tertiary_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:text="@string/publish_to_all"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:id="@+id/publicTopicSwitch"
                android:layout_marginHorizontal="15dp"
                app:switchPadding="10dp"
                android:soundEffectsEnabled="true"
                app:thumbTint="@color/secondary_color"
                app:trackTint="@color/tertiary_color"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:layout_marginHorizontal="15dp"
            app:backgroundTint="@null"
            android:id="@+id/importDocumentBtn"
            app:icon="@drawable/baseline_qr_code_24"
            app:iconSize="25dp"
            android:text="@string/import_document"
            android:textColor="@color/tertiary_color"
            android:textSize="16sp"
            app:iconTint="@color/tertiary_color"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="15dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:text="@string/topic_vocabulary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/vocabularyListView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/addVocabularyBtn"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="35dp"
        app:backgroundTint="@color/secondary_color"
        android:src="@drawable/baseline_add_24"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_topic" />
</FrameLayout>

</ScrollView>

