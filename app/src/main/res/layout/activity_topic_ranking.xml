<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color"
    android:layout_height="match_parent"
    tools:context=".TopicRankingActivity">

    <LinearLayout
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/returnBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_extrabold"
            android:text="@string/ranking"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/criteriaBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_more_vert_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/topicRankingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/emptyRankingLayout"
        android:layout_weight="1">
        <TextView
            android:id="@+id/emptyRankingTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/empty_ranking"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>