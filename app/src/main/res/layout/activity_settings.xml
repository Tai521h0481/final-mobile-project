<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/returnBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="20dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_extrabold"
            android:text="@string/settings"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/languageOptions"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginVertical="5dp"
            android:background="@drawable/radio_selector"
            android:id="@+id/englishOption"
            android:textColor="@color/white"
            android:text="@string/english"
            android:button="@android:color/transparent"
            android:padding="10dp"
            android:drawableStart="@drawable/us_flag_small"
            android:layout_width="match_parent"
            android:gravity="center"
            android:checked="true"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginVertical="5dp"
            android:padding="10dp"
            android:background="@drawable/radio_selector"
            android:drawableStart="@drawable/vietnam_flag_small"
            android:id="@+id/vietnameseOption"
            android:textColor="@color/white"
            android:text="@string/vietnamese"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>

</LinearLayout>