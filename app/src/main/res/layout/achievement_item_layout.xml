<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/achievement_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/achievementImage"
        android:src="@drawable/take_picture"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/achievementName"
        android:text="@string/achievements"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/bevietnampro_semibold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/achievementObtained"
        android:text="@string/achievements"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/bevietnampro_regular"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:background="@drawable/green_bg"
        android:padding="10dp"
        android:layout_height="wrap_content"/>

</LinearLayout>