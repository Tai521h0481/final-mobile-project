<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/dark_color"
    android:layout_width="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_menu_book_24"
        android:textColor="@color/white"
        android:text="@string/add_topic"
        android:id="@+id/addTopicBtn"
        app:iconPadding="20dp"
        app:iconTint="@color/white"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/baseline_menu_book_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:backgroundTint="@null"
        android:background="@android:color/transparent"
        app:icon="@drawable/baseline_folder_open_24"
        android:text="@string/add_folder"
        android:id="@+id/addFolderBtn"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:iconPadding="20dp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/baseline_menu_book_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>